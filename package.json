{
	"name": "better-auth-mercadopago",
	"version": "0.2.3",
	"description": "Mercado Pago plugin for Better Auth - Simple payments, subscriptions and split payments",
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ivantsxx/better-auth-mercadopago.git"
	},
	"scripts": {
		"build": "tsup",
		"typecheck": "tsc --noEmit",
		"prepublishOnly": "pnpm build",
		"lint": "biome check",
		"format": "biome check --write",
		"test": "vitest run"
	},
	"keywords": [
		"better-auth",
		"better-auth-plugin",
		"better-auth-mercadopago",
		"better-auth-mercadopago-plugin",
		"better-auth/mercadopago",
		"better-auth/mercadopago-plugin",
		"better-auth/mercadopago-plugin-mercadopago",
		"mercadopago",
		"payments",
		"subscriptions",
		"auth",
		"authentication"
	],
	"author": "IvanTsxx",
	"license": "MIT",
	"peerDependencies": {
		"better-auth": "^1.0.0"
	},
	"dependencies": {
		"@types/mercadopago": "^1.5.11",
		"mercadopago": "^2.0.0",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.13",
		"@changesets/cli": "^2.29.8",
		"@types/node": "^20.0.0",
		"better-auth": "^1.0.0",
		"tsup": "^8.5.1",
		"typescript": "^5.3.0",
		"vitest": "^4.0.18"
	},
	"files": [
		"dist",
		"README.md",
		"SECURITY.md",
		"CHANGELOG.md"
	],
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	},
	"publishConfig": {
		"access": "public"
	}
}
